{
  "name": "the-dark-triad",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "THE DARK TRIAD electron application replicating CCC experience.",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "dev": "concurrently -k -n MAIN,PRELOAD,RENDERER,ELECTRON \"npm:watch --workspace packages/main\" \"npm:watch --workspace packages/preload\" \"npm:dev --workspace packages/renderer\" \"npm:electron\"",
    "electron": "wait-on tcp:5173 && VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build --workspaces",
    "build:win": "electron-builder --win portable",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "workspaces": [
    "packages/main",
    "packages/preload",
    "packages/renderer"
  ],
  "devDependencies": {
    "@types/node": "20.12.7",
    "concurrently": "8.2.2",
    "electron": "31.3.0",
    "electron-builder": "24.13.3",
    "eslint": "9.10.0",
    "typescript": "5.4.5",
    "wait-on": "7.2.0",
    "electron-vite": "2.0.0"
  },
  "build": {
    "appId": "com.darktriad.app",
    "productName": "The Dark Triad",
    "directories": {
      "output": "dist"
    },
    "files": [
      "packages/**/dist/**",
      "resources/**"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/logo.ico"
    },
    "asar": true
  }
}
